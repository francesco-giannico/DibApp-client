<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="it.uniba.di.ivu.sms16.gruppo2.dibapp.AboutFullscreenActivity">

    <TextView
        android:id="@+id/name_app_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/version_textView"
        android:layout_centerHorizontal="true"
        android:text="@string/name_dibapp"
        android:textColor="#cccccc"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/version_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/app_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/version_info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#cccccc" />

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />


</RelativeLayout>
