<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="vertical">

    <!--72dp default size of ListItem from guidelines
    https://material.google.com/layout/metrics-keylines.html#metrics-keylines-keylines-spacing
    DESIGN MATERIAL CORRETTO-->

    <ImageView
        android:id="@+id/iconaTipoEventoHistory"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        android:elevation="1dp"
        android:src="@drawable/ic_sessione"
        android:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/descrizioneEventoHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="80dp"
        android:ellipsize="middle"
        android:gravity="left"
        android:maxLines="3"
        android:text="Hai creato la sessione Map"
        android:textColor="#000" />

    <TextView
        android:id="@+id/dataEventoHistory"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="right"
        android:text="4 minuti fa"
        android:textSize="12sp" />

</RelativeLayout>